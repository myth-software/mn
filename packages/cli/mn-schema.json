{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://docs.mountnotion.com/configuration",
  "title": "json schema for mount notion configuration",
  "type": "object",
  "properties": {
    "workspace": {
      "type": "object",
      "properties": {
        "selectedPages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "lint": {
          "type": "object",
          "properties": {
            "columns": {
              "type": "object"
            },
            "rows": {
              "type": "object"
            }
          }
        }
      },
      "required": ["selectedPages"]
    },
    "auth": {
      "type": "object",
      "properties": {
        "key": {
          "type": ["string", "null"]
        },
        "notionIntegrationKey": {
          "type": "string",
          "description": "notion api key to authorize client",
          "$default": {
            "$source": "argv",
            "index": 1
          }
        }
      }
    },
    "options": {
      "type": "object",
      "properties": {
        "basic": {
          "type": "object",
          "properties": {
            "baseUrl": {
              "type": "string"
            },
            "caches": {
              "type": "string"
            },
            "javascriptizeColumns": {
              "type": "boolean"
            },
            "outDir": {
              "type": "string"
            }
          },
          "required": ["caches", "outDir"]
        },
        "auth": {
          "type": "object",
          "properties": {
            "strategies": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "usersDatabase": {
              "type": "string"
            },
            "userColumn": {
              "type": "string"
            },
            "accessorProperty": {
              "type": "string"
            },
            "public": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "schematics": {
      "$ref": "#/$defs/schematics"
    }
  },
  "$defs": {
    "schematics": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "disable": {
            "type": "boolean"
          },
          "options": {
            "type": "object",
            "properties": {
              "basic": {
                "type": "object",
                "properties": {
                  "debug": {
                    "type": "bolean",
                    "description": "enable debug logs",
                    "$default": false
                  },
                  "pageId": {
                    "type": "string",
                    "description": "page id to look for databases at",
                    "$default": {
                      "$source": "argv",
                      "index": 0
                    }
                  },
                  "caches": {
                    "type": "string",
                    "description": "caches"
                  },
                  "outDir": {
                    "type": "string",
                    "description": "specify the output directory"
                  },
                  "baseUrl": {
                    "type": "string",
                    "description": "client baseUrl"
                  },
                  "locals": {
                    "type": "string"
                  },
                  "all": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "eject": {
                    "type": "boolean"
                  },
                  "excludes": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "drizzle": {
                    "type": "string"
                  },
                  "org": {
                    "type": "string",
                    "description": "organization to import in loopback repository"
                  },
                  "rtk": {
                    "type": "boolean",
                    "description": "client with rk"
                  },
                  "auth": {
                    "type": "boolean",
                    "description": "generate controllers with auth"
                  }
                }
              },
              "auth": {
                "type": "object",
                "properties": {
                  "userColumn": {
                    "type": "string"
                  },
                  "accessorProperty": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
