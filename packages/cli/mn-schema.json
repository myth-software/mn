{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.mountnotion.com/configuration",
  "title": "json schema for mount notion configuration",
  "type": "object",
  "properties": {
    "selectedPages": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "lint": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "enum": ["warn", "error"]
      }
    },
    "auth": {
      "type": "string",
      "enum": ["key", "oauth"]
    },
    "schematicDefaults": {
      "type": "object",
      "properties": {
        "baseUrl": {
          "type": "string",
          "format": "uri"
        },
        "caches": {
          "type": "string"
        },
        "stratgies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "userColumn": {
          "type": "string"
        },
        "excludes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "schematics": {
      "$ref": "#/$defs/schematics"
    }
  },
  "$defs": {
    "schematics": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "disable": {
            "type": "boolean"
          },
          "debug": {
            "type": "boolean",
            "description": "enable debug logs",
            "$default": false
          },
          "caches": {
            "type": "string",
            "description": "the local package or path to caches"
          },
          "outDir": {
            "type": "string",
            "description": "specify the output directory"
          },
          "baseUrl": {
            "type": "string",
            "description": "base url for the api with no trailing slash"
          },
          "locals": {
            "type": "string",
            "description": "the local package or path to locals"
          },
          "all": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "the databases to generate locals for every time"
          },
          "eject": {
            "type": "boolean"
          },
          "excludes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "drizzle": {
            "type": "string",
            "description": "the local package or path to drizzle"
          },
          "rtk": {
            "type": "boolean",
            "description": "client with rk"
          },
          "auth": {
            "type": "boolean",
            "description": "generate controllers with auth"
          },
          "userColumn": {
            "type": "string"
          },
          "accessorProperty": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
